
<div class="container mt-4 mb-4">
  <div class="row justify-content-md-center">
    <div class="col-8">
      <div class="accordion" id="articleAccordion">
        <% @articles.each do |article| %>
          <div class="card">
            <div class="card-header" id="heading<%= article.id %>">
              <div class="row">
                <div class="col-8">
                  <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapse<%= article.id %>" aria-expanded="false" aria-controls="collapse<%= article.id %>">
                    <%= article.title %>
                  </button>
                </div>
                <div>
                  <% if article.user %>
                    Author: <%= article.user.username %><br>
                  <% end %>
                  <small>Created: <%= time_ago_in_words(article.created_at) %> ago<br> 
                  Edited: <%= time_ago_in_words(article.updated_at) %> ago</small>
                </div>
              </div>
            </div>

            <div id="collapse<%= article.id %>" class="collapse" aria-labelledby="heading<%= article.id %>" data-parent="#articleAccordion">
              <div class="card-body">
                <%= article.description %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>