<div class="container">
  <% flash.each do |name, msg| %>
    <div class="<%= flash_class(name) %> alert-dismissable fade show" role="alert">
      <%= msg %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div> 
  <% end %>
</div>